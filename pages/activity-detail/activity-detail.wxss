@import "/components/iPhoneX-line/iPhoneX-line";
image{
  width: 100%
}
.fixed-top,.detail{
  height: 100%;
  box-sizing: border-box;
}
.scroll{
  height: 100%;
  padding-bottom: 88rpx;
  box-sizing: border-box;
}
.scroll-bottom{
  padding-bottom: 122rpx;
}
.tabar{
  height: 88rpx;
}
.tabar-btn{
  width: 50%;
  height: 88rpx;
  background: #dddddd;
  display: inline-block;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  padding: 0 1rpx 0 1rpx;
  border-radius: 0;
}
.tabar-btn:first-child{
  border-right:6rpx solid #fff;
}
.tabar-btn.active{
  background-color: #e9d96a;
}